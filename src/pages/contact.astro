---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" />

  <ContactUs
    id="form"
    subtitle="Feel free to reach out to us if you'd like to purchase a copy, submit work, or just say hello."
  />

  <Features2
    columns={2}
    items={[
      {
        title: 'Phone',
        description: 'INSERT PHONE NUMBER',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'INSERT EMAIL ADDRESS',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
