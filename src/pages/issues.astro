---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import coverMiddlelost1 from '~/assets/images/cover-middlelost-1.jpg';
import coverMiddlelost4 from '~/assets/images/cover-middlelost-4.jpg';


import { APP_BLOG } from 'astrowind:config';

import Grid from '~/components/blog/Grid.astro';

import { getBlogPermalink } from '~/utils/permalinks';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Post, Widget } from '~/types';
import Button from '~/components/ui/Button.astro';

export interface Props extends Widget {
  title?: string;
  linkText?: string;
  linkUrl?: string | URL;
  information?: string;
}

const {
  title = await Astro.slots.render('title'),
  linkText = 'View all posts',
  linkUrl = getBlogPermalink(),
  information = await Astro.slots.render('information'),

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const posts: Array<Post> = [
    {
        id: '4',
        title: 'MiddleLost 4',
        image: coverMiddlelost4,
        slug: '4',
        permalink: '/issues/4',
        // TODO: Update publishDate
        publishDate: new Date(),
    },
    {
        id: '1',
        title: 'MiddleLost 1',
        image: coverMiddlelost1,
        slug: '1',
        permalink: '/issues/1',
        // TODO: Update publishDate
        publishDate: new Date(),
    }
]

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Issues"
  />

  {
    APP_BLOG.isEnabled ? (
      <WidgetWrapper id={id} isDark={isDark} containerClass={classes?.container as string} bg={bg}>
        <div class="flex flex-col lg:justify-between lg:flex-row mb-8">
          {title && (
            <div class="md:max-w-sm">
              <h2
                class="text-3xl font-bold tracking-tight sm:text-4xl sm:leading-none group font-heading mb-2"
                set:html={title}
              />
              {APP_BLOG.list.isEnabled && linkText && linkUrl && (
                <Button variant="link" href={linkUrl}>
                  {' '}
                  {linkText} Â»
                </Button>
              )}
            </div>
          )}
  
          {information && <p class="text-muted dark:text-slate-400 lg:text-sm lg:max-w-md" set:html={information} />}
        </div>
  
        <Grid posts={posts} tall />
      </WidgetWrapper>
    ) : (
      <Fragment />
    )
  }
  

</Layout>

