---
import '@fontsource-variable/eb-garamond';

// 'DM Sans'
// EB Garamond Variable
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'EB Garamond Variable';
    --aw-font-serif: 'EB Garamond Variable';
    --aw-font-heading: 'EB Garamond Variable';

    --aw-color-primary: rgb(145, 35, 10);
    --aw-color-secondary: rgb(90, 21, 6);
    --aw-color-accent: rgb(145, 35, 10);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(241, 227, 222);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'EB Garamond Variable';
    --aw-font-serif: 'EB Garamond Variable';
    --aw-font-heading: 'EB Garamond Variable';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
